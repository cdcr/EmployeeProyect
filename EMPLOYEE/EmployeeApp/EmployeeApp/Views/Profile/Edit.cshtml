@model EmployeeApp.Models.ProfileModel

@{

    ViewData["Title"] = "Edit Profiles";
}
<h2>Create Employee Profile</h2>


@using (Html.BeginForm("Edit", "Profile", FormMethod.Post))
{
    <div class="row">
        <div class="form-group col-lg-6">
            @Html.HiddenFor(model => model.Id)
            @*@Html.ValidationMessageFor(model=>model.Name,null,new { @class="red"})*@
            @*@Html.LabelFor(model => model.Id)
        @Html.TextBoxFor(model => model.Id)*@
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, "", new { @class = "form-control" })
            @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description, "", new { @class = "form-control" })
            @Html.LabelFor(model => model.Salary)
            @Html.TextBoxFor(model => model.Salary, "", new { @class = "form-control" })
            @Html.LabelFor(model => model.DateCreated)
            @Html.TextBoxFor(model => model.DateCreated, "", new { @class = "form-control" })
            @Html.LabelFor(model => model.DateUpdated)
            @Html.TextBoxFor(model => model.DateUpdated, "", new { @class = "form-control" })
            <div>
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </div>
    </div>
}

