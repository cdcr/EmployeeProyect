@model IEnumerable<EmployeeApp.Models.EmployeeModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Employee List</h2>


@using (Html.BeginForm("Index", "Employee"))
{
    <div>
        <div class="row">
            <div class="form-group col-lg-6">
                <input type="text" class="form-control" name="Id" id="txtName" placeholder="Insert Employee ID" />
                <button class="btn btn-success" type="submit">Get Employees</button>
                <p class="text-warning">@ViewBag.Warning</p>
            </div>
        </div>
    </div>
}

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ContractTypeName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ProfileId)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.ProfileName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.AnualSalary)</th>
            <th colspan="2" scope="col">Options</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.ContractTypeName</td>
            <td>@item.ProfileId</td>
            <td>@item.ProfileName</td>
            <td>@item.Description</td>
            <td class="text-success">@string.Format("{0:C}", @item.AnualSalary)</td>
            <td>
                <div class="form-group col-lg-6">
                        <input type="button" value="Edit" class="btn btn-warning" onclick="document.location.href = '@Url.Content("~/Employee/Edit/?ID="+item.Id) '" />
                        @*<input type="submit" value="Create" class="btn btn-success" onclick="document.location.href = '@Url.Content("~/Employee/Edit/?ID="+item.ID) '" />*@
                </div>
            </td>
            <td>
                <div class="form-group col-lg-6">
                    <input type="button" value="Delete" class="btn btn-danger" onclick="document.location.href = '@Url.Content("~/Employee/Delete/?ID="+item.Id) '" />
                </div>
                @*<button class="btn btn-danger" onclick="jsDelete( @item.ID)" >Delete</button>*@
            </td>
        </tr>
    }
</table>
<div>
    <div class="row">
        <div class="form-group col-lg-6">
            <a href="~/Employee/CreateEmployee" class="btn btn-primary">New Employee</a>
            <a href="~/Profile/Index" class="btn btn-info">Employee Profiles</a>
        </div>
    </div>
</div>

<script>
